      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApplication1"
      mc:Ignorable="d"
      Title="Main_Discipline_Page" Width="253" Height="70">
    <Grid>
        <DockPanel Width="253" Height="70">
            <Button x:Name="ADD_Discipline_BUTTON" Margin="2,20,0,24" Width="75" Height="25" Content="+"/>
